<Page
    x:Class="Multimedia.Trailers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Multimedia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="173*"/>
        </Grid.RowDefinitions>

        <Image x:Name="imgVideo1" Margin="0,20,0,0" Source="/Assets/TrailerImg1.png"/>
        <Image x:Name="imgVideo2" Grid.Column="1" Source="/Assets/TrailersImg2.png" Margin="0,20,0,0"/>
        <Image x:Name="imgVideo3" Grid.Row="2" Source="/Assets/TrailersImg3.png" Margin="0,20,0,0"/>
        <Image x:Name="imgVideo4" Grid.Row="2" Grid.Column="1" Source="/Assets/TrailersImg4.png" Margin="0,20,0,0"/>

        <TextBlock x:Name="textBox1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold" TextDecorations="Underline" Text="Napoleon | Official Trailer"/>
        <TextBlock x:Name="textBox2" Grid.Row="1" Grid.Column="1" FontSize="20" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Los Juegos Del Hambre Balada De Pájaros Cantores Y Serpientes (2023)"/>
        <TextBlock x:Name="textBox3" Grid.Row="3" FontSize="25" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center" VerticalAlignment="Center" Text="The Marvels | Tráiler Oficial"/>
        <TextBlock x:Name="textBox4" Grid.Row="3" Grid.Column="1" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" TextDecorations="Underline" Text="WONKA | Tráiler Oficial"/>

    </Grid>
</Page>
